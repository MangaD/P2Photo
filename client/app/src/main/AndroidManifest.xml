<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.p2photo">
    <!-- This permission is for Internet connection established (using sockets). -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- This permission is to check weather Internet connection is available or not -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewPhotoActivity"></activity>
        <activity android:name=".ViewAlbumActivity2" />
        <activity android:name=".ListUserAlbumActivity2" />
        <activity android:name=".DriveLogin" />
        <activity android:name=".AddUserToAlbumActivity" />
        <activity android:name=".AddPhotoActivity" />
        <activity android:name=".FindUserActivity" />
        <activity android:name=".CreateAlbumActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoggedInActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>